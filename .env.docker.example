#==============================================================================
# Portal API - Docker Environment Variables
#==============================================================================
# Copy this file to .env and adjust values for your environment
# Usage: cp .env.docker.example .env
#==============================================================================

#------------------------------------------------------------------------------
# Application
#------------------------------------------------------------------------------
APP_NAME="Portal API"
APP_ENV=local
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=true
APP_URL=http://localhost:8080

APP_LOCALE=tr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=tr_TR

#------------------------------------------------------------------------------
# Docker
#------------------------------------------------------------------------------
APP_PORT=8080

#------------------------------------------------------------------------------
# SQL Server Database
#------------------------------------------------------------------------------
# For Docker on Mac/Windows use: host.docker.internal
# For Docker on Linux use: 172.17.0.1 (or your host IP)
DB_CONNECTION=sqlsrv
DB_HOST=host.docker.internal
DB_PORT=1433
DB_DATABASE=erp_database
DB_USERNAME=portal_user
DB_PASSWORD=your_secure_password

#------------------------------------------------------------------------------
# Redis (Docker service)
#------------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

#------------------------------------------------------------------------------
# Cache & Session
#------------------------------------------------------------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

#------------------------------------------------------------------------------
# JWT Authentication
#------------------------------------------------------------------------------
JWT_SECRET=generate_with_php_artisan_jwt:secret
JWT_TTL=1440
JWT_REFRESH_TTL=20160

#------------------------------------------------------------------------------
# Portal API Security
#------------------------------------------------------------------------------
PORTAL_API_KEY=generate-a-secure-random-key-min-32-chars
PORTAL_ALLOWED_IPS=
PORTAL_JWT_TTL=1440
PORTAL_JWT_REFRESH_TTL=20160

#------------------------------------------------------------------------------
# File Upload
#------------------------------------------------------------------------------
PORTAL_UPLOAD_MAX_SIZE=52428800
PORTAL_STORAGE_PATH=/var/www/html/storage/app/portal-files

#------------------------------------------------------------------------------
# Rate Limiting
#------------------------------------------------------------------------------
PORTAL_RATE_LIMIT=60

#------------------------------------------------------------------------------
# Logging
#------------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

#------------------------------------------------------------------------------
# Mail (Optional)
#------------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="portal@yudo.com.tr"
MAIL_FROM_NAME="${APP_NAME}"
